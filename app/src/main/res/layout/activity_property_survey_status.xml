<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="expandView"
            type="Integer" />

        <variable
            name="collapseView"
            type="Integer" />
    </data>


    <RelativeLayout
        android:id="@+id/container_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_forty_dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorPrimaryDark">


                <ImageView
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/seven_dp"
                    android:background="@android:color/transparent"
                    android:paddingTop="@dimen/fifteen_dp"
                    android:paddingBottom="@dimen/fifteen_dp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/five_dp"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageButton"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/wakfboard_rounded" />
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/label_wakf_board"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/text_dimen_18"
                    android:layout_marginStart="@dimen/five_dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:id="@+id/plusImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/fifteen_dp"
                    android:paddingTop="@dimen/fifteen_dp"
                    android:paddingBottom="@dimen/fifteen_dp"
                    android:src="@drawable/plus_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:id="@+id/mapFrameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.fragment.app.FragmentContainerView
                                android:id="@+id/preview_map"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />


                            <RelativeLayout
                                android:id="@+id/area_cal_lay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/reports_view_bg"
                                android:padding="@dimen/ten_dp"
                                app:layout_constraintTop_toTopOf="parent">

<!--                                            <TextView-->
<!--                                                android:id="@+id/accuracy_textView"-->
<!--                                                android:layout_width="wrap_content"-->
<!--                                                android:layout_height="wrap_content"-->
<!--                                                android:layout_alignParentStart="true"-->
<!--                                                android:layout_marginStart="@dimen/twenty_dp"-->
<!--                                                android:background="@null"-->
<!--                                                android:fontFamily="@font/roboto_regular"-->
<!--                                                android:gravity="center"-->
<!--                                                android:includeFontPadding="true"-->
<!--                                                android:text="Accuracy"-->
<!--                                                android:textColor="@color/black"-->
<!--                                                android:textSize="@dimen/text_dimen_12" />-->

                                <TextView
                                    android:id="@+id/polygon_area"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Area"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_regular"/>

                                <TextView
                                    android:id="@+id/distance_textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:layout_marginStart="@dimen/twenty_dp"
                                    android:layout_toEndOf="@id/polygon_area"
                                    android:fontFamily="@font/roboto_regular"
                                    android:gravity="center"
                                    android:text="Distance"
                                    android:textColor="@color/black" />


                                <!--                                <ImageView-->
<!--                                    android:id="@+id/type_textview"-->
<!--                                    android:layout_width="wrap_content"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:layout_alignParentEnd="true"-->
<!--                                    android:layout_marginStart="@dimen/twenty_dp"-->
<!--                                    android:layout_marginEnd="@dimen/twenty_dp"-->
<!--                                    android:background="@null"-->
<!--                                    android:contentDescription="@string/app_name"-->
<!--                                    android:fontFamily="@font/roboto_regular"-->
<!--                                    android:gravity="center"-->
<!--                                    android:includeFontPadding="true"-->
<!--                                    android:textColor="@color/black"-->
<!--                                    android:textSize="@dimen/text_dimen_12" />-->


                            </RelativeLayout>

                            <ImageView
                                android:layout_below="@id/area_cal_lay"
                                android:id="@+id/map_view_list_icon"
                                android:layout_margin="@dimen/twenty_dp"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/map_list_icon" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>

</layout>