<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="callback"
            type="com.thresholdsoft.wakfboard.ui.mapdataliastactivity.MapDataListActivityMvpPresenter" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorPrimaryDark"
                tools:ignore="MissingConstraints">


                <ImageView
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/seven_dp"
                    android:background="@android:color/transparent"
                    android:onClick="@{()-> callback.onClickSubmit()}"
                    android:paddingTop="@dimen/fifteen_dp"
                    android:paddingBottom="@dimen/fifteen_dp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/five_dp"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageButton"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/wakfboard_rounded" />


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:text="Saved Survey"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_dimen_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mapDataRecycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ten_dp" />

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/ten_dp"
            android:background="@drawable/rounded_cornerers_background"
            android:backgroundTint="@color/colorPrimaryDark"
            android:fontFamily="@font/roboto_medium"
            android:onClick="@{()-> callback.onClickSubmit()}"
            android:paddingLeft="@dimen/twenty_dp"
            android:paddingTop="@dimen/ten_dp"
            android:paddingRight="@dimen/twenty_dp"
            android:paddingBottom="@dimen/ten_dp"
            android:text="@string/label_submit"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </RelativeLayout>
</layout>
