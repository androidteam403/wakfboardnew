<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/dialog_background"
        android:stateListAnimator="@null">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/twenty_dp"
                android:fontFamily="@font/roboto_bold"
                android:paddingTop="16dp"
                android:text="@string/label_tittle"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/upload_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:paddingTop="16dp"
                android:src="@drawable/image_upload_icon" />
        </LinearLayout>


        <EditText
            android:id="@+id/edit_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_dp"
            android:layout_below="@+id/title_layout"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:background="@drawable/rounded_corners_white"
            android:fontFamily="@font/roboto_light"
            android:hint="Name"
            android:inputType="text"
            android:paddingStart="@dimen/ten_dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edit_description_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/eighty_dp"
            android:layout_below="@+id/edit_name_edit_text"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginEnd="@dimen/twenty_dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:gravity="start"
            android:background="@drawable/rounded_corners_white"
            android:fontFamily="@font/roboto_light"
            android:hint="@string/label_description"
            android:inputType="textMultiLine"
            android:paddingStart="@dimen/ten_dp"
            android:textColor="@color/black"
            android:importantForAutofill="no" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edit_description_edit_text"
            android:layout_marginTop="@dimen/five_dp"
            android:background="#cdced2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialogButtonNO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:stateListAnimator="@null"
                android:textAlignment="center"
                android:textColor="#007aff"
                android:textSize="19sp" />

            <View
                android:id="@+id/separator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#cdced2" />

            <TextView
                android:id="@+id/dialogButtonOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:stateListAnimator="@null"
                android:textAlignment="center"
                android:textColor="#007aff"
                android:textSize="19sp" />
        </LinearLayout>

    </RelativeLayout>
</layout>