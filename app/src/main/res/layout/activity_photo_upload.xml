<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="callBack"
            type="com.thresholdsoft.wakfboard.ui.photouploadactivity.PhotoUploadMvpPresenter" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/photo_upload_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_click"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/ten_dp"
                android:onClick="@{()-> callBack.onBackClickData()}"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_toEndOf="@id/back_click"
                android:fontFamily="@font/roboto_bold"
                android:text="Upload Images"
                android:textColor="@color/white"
                android:textSize="@dimen/text_dimen_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/ten_dp"
                android:background="@drawable/toast_bg"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/app_name"
                android:fontFamily="@font/roboto_bold"
                android:onClick="@{()->callBack.photoUploadbutton()}"
                android:padding="@dimen/five_dp"
                android:src="@drawable/image_upload_icon"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tool_bar">

            <TextView
                android:id="@+id/no_data_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_bold"
                android:padding="@dimen/five_dp"
                android:text="@string/label_no_images_found"
                android:textColor="@color/red"
                android:textSize="@dimen/text_dimen_14" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pho_recycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/ten_dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/full_view"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name" />
        <ImageView
            android:id="@+id/image_fullview_delete"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="@dimen/fifteen_dp"
            android:layout_width="30dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_height="30dp"
            android:background="@drawable/rounded_cornerers_background"
            android:backgroundTint="@color/colorPrimaryDark"
            android:padding="@dimen/three_dp"
            android:src="@drawable/ic_cross_white"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>
</layout>
