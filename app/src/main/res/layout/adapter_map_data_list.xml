<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="mapData"
            type="com.thresholdsoft.wakfboard.ui.propertysurvey.model.MapDataTable" />

    </data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/view_list_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        tools:showIn="@layout/list_item_main">

        <RelativeLayout
            android:id="@+id/parent_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ten_dp"
            android:layout_marginEnd="@dimen/ten_dp">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:checked="@{mapData.checked?true:false}"
                android:contentDescription="@string/app_name" />

            <RelativeLayout
                android:id="@+id/itemViewClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_toRightOf="@id/checkBox">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/twenty_five_dp"
                    android:layout_height="@dimen/twenty_five_dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/placeholder" />

                <TextView
                    android:id="@+id/name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_toEndOf="@+id/image"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_bold"
                    android:singleLine="true"
                    android:text="@{mapData.name}"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_textview"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_toEndOf="@+id/image"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:singleLine="true"
                    android:text="@{mapData.description}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dimen_12" />


                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_toEndOf="@id/image"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:singleLine="true"
                    android:text="@{mapData.mapDate}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dimen_12" />

                <TextView
                    android:id="@+id/length_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/description"
                    android:layout_marginStart="@dimen/ten_dp"
                    android:layout_toEndOf="@id/date"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:singleLine="true"
                    android:text="@{mapData.areaDistance}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_dimen_12" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/images_icon"
                        android:layout_width="@dimen/thirty_dp"
                        android:layout_height="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/three_dp"
                        android:layout_marginRight="@dimen/eight_dp"
                        android:src="@drawable/ic_gallery"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/edit_map"
                        android:layout_width="@dimen/twenty_dp"
                        android:layout_height="@dimen/twenty_dp"
                        android:layout_marginTop="@dimen/six_dp"
                        android:layout_marginEnd="@dimen/eight_dp"
                        android:layout_marginRight="@dimen/eight_dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/edit_ic"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/forawrd_icon"
                        android:layout_width="@dimen/twenty_dp"
                        android:layout_height="@dimen/twenty_dp"
                        android:layout_marginTop="@dimen/six_dp"
                        android:layout_marginEnd="@dimen/eight_dp"
                        android:layout_marginRight="@dimen/eight_dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/right_arrow_icom" />

                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/images_recycle_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/parent_item_layout"
            android:nestedScrollingEnabled="true"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:background="@color/jumbo" />
    </RelativeLayout>
</layout>