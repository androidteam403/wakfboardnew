                android:src="@drawable/ic_save" />

            <ImageView
                android:id="@+id/polygon_maual_undo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:contentDescription="@string/app_name"
