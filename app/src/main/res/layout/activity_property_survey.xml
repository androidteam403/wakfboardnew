                android:layout_marginTop="@dimen/ten_dp"
                android:contentDescription="@string/app_name"
                android:onClick="@{()->callbacks.polylineClearClick()}"
                android:src="@drawable/ic_clear" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginEnd="@dimen/ten_dp"
